    <ImageView
        android:id="@+id/item_image_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pronoun" />

    <EditText
